<form
  enctype="multipart/form-data"
  method="POST"
  action="/images/{% if image.id %}{{ image.id }}{% endif %}" class="center">

  {% if image.id %}

    <input type="hidden" name="id" value="{{ image.id }}">

  {% endif %}
  
  <div class="center">
    <label for="image">Upload Image:</label>
    <br />
    <input type="file" name="image" id="image" />
  </div>
  <div>
    <input type="submit" />
  </div>
</form>