{% extends '_layout.twig' %}

{% block main_content %}

{% include 'partials/_header.twig' %}

<h1 class="center">#{{star.id}} -- <strong>Star: {{star.name}}</strong> </h1>

<img src="/images/{{star.img}}" alt="{{star.name}} image" id="img"></img>

<div class="center">
    <p>Star Magnitude :{{ star.magnitude }}</p>
    <p>Star Type :{{ star.type }}</p>
    <p>Star Description :{{ star.description }}</p>

</div>

<p class="center">
    <a href="/stars/{{ star.id }}/edit">Edit this Star</a>
    <a href="/stars">Back to Stars</a>
    <a href="/stars/{{ star.id }}/delete">Delete this Star</a>
</p>

{% include 'partials/_footer.twig' %}

{% endblock %}